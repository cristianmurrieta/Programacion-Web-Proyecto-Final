    <body class="container-fluid">

        <%- include('headeradmin') %>

        <h2>Categoria de Juego</h2>
        <a class="btn btn-outline-danger" href="/admin/categoria_new">Nuevo</a>
        <div>

        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach((categoria)=>{%>
                <tr>
                        <td scope="row"><%= categoria.id %></td>
                        <td><%= categoria.nombre %></td>
                        <td>
                            <a href="/admin/modificarcategoria/<%= categoria.id %>" onclick="return confirm('Seguro que deseas Editar este elemento?');">Editar</a>
                            <a href="/admin/eliminarcategoria/<%= categoria.id %>" onclick="return confirm('Seguro que deseas eliminar este elemento?');">Eliminar</a>
                        </td>
                </tr>    
                <%})%>
            </tbody>
        </table>
        <%- include('footeradmin') %>
    </body>
