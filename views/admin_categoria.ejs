        <link rel="stylesheet" href="admin-assets/css/Features-Boxed.css">
        <link rel="stylesheet" href="admin-assets/css/styles.css">
    </head>
    <body >

        <%- include('headeradmin') %>

        <h2>Categoria de Juego</h2>
        <a class="btn btn-danger" href="/admin/categoria_new">Nuevo</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach((categoria)=>{%>
                <tr>
                        <td><%= categoria.id %></td>
                        <td><%= categoria.nombre %></td>
                        <td>
                            <a href="/admin/modificarcategoria/<%= categoria.id %>" onclick="return confirm('Seguro que deseas Editar este elemento?');">Editar</a>
                            <a href="/admin/eliminarcategoria/<%= categoria.id %>" onclick="return confirm('Seguro que deseas eliminar este elemento?');">Eliminar</a>
                        </td>
                </tr>    
                <%})%>
            </tbody>
        </table>

        <%- include('footer') %>

        <script src="index-assets/bootstrap/js/bootstrap.min.js"></script>
    </body>
</html>