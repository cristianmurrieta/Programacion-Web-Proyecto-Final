<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <link rel="icon" href="/imagenes/casino.jpg" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <title>Casino Osito</title>
    </head>
    <body class="container-fluid">

        <%- include('headeradmin') %>

        <h2>banner</h2>
        <a class="btn btn-danger" href="/admin/banner_new">Nuevo</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>nombre</th>  
                    <th>urlCloud</th>
                    <th>url</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <% banners.forEach((banner)=>{%>
                <tr>
                        <td><%= banner.id %></td>
                        <td><%= banner.nombre %></td>
                        <td><%= banner.urlCloud %></td>
                        <td><%= banner.url %></td>
                        <td><%if(banner.estado == 0 ){%>
                            Inactivo
                        <% } else { %>
                            Activo
                        <% } %>
                            
                        </td>
                        <td>
                            <a href="/admin/eliminarbanner/<%= banner.id %>" onclick="return confirm('Seguro que deseas eliminar este elemento?');">Eliminar</a>
                        </td>
                </tr>    
                <%})%>
            </tbody>
        </table>

        <%- include('footeradmin') %>

    </body>
</html>