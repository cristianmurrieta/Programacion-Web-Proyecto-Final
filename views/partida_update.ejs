<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <link rel="stylesheet" href="css/main.css" type="text/css"/>
        <link rel="icon" href="/imagenes/casino.jpg" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <title>Casino Osito</title>
    </head>
    <body class="container">

        <%- include('headeradmin') %>
        
        <h2>Formulario nuevo juego</h2>
        <div class="row">
            <div class="col">
                <form method="post" action="/admin/modificarpartida">
                    <input type="hidden" name="partida_id" value="<%= partida.id %>">
                    <div>
                        <label class="form-label">Juego:</label>
                        <select name="partida_tipo_id" class="form-select">
                            <option value="-1">--- Elegir una categoria ---</option>
                            <% tipoJuego.forEach( (tipo)=> { %>
                                <% if (tipo.id == partida.tipoJuegoId) { %>
                                    <option selected value="<%= tipo.id%>"><%= tipo.nombre %></option>
                                 <% } else { %>
                                    <option value="<%= tipo.id %>"><%= tipo.nombre %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Fecha:</label>
                        <input value="<%= partida.fecha.toISOString().substring(0,10) %>" name="partida_fecha" type="date" class="form-control">
                    </div>
                    <div class="mt-2">
                        <label class="form-label">Hora Inicio:</label>
                        <input value="<%= partida.inicio %>" name="partida_hora" type="time">
                    </div>
                    <div>
                        <label class="form-label">Duracion:</label>
                        <input value="<%= partida.duracion %>" name="partida_duracion" type="text" class="form-control">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Estado:</label>
                        <select name="partida_estado" class="form-select">
                            <option value="-1">--- Elegir una categoria ---</option>
                            
                        </select>
                    </div>
        
                    <button type="submit" class="btn btn-danger">Guardar</button>
                </form>
            </div>
            <div class="col">
                <!--Equipos registrados-->
                <div>
                    <form method="post" action="/admin/equipo/inscribir">
                        <input type="hidden" name="inscripcion_partida_id" value="<%= partida.id %>">
                        <select class="form-select" name="inscripcion_equipo_id">
                            <option value="-1">--- Elegir su equipo ---</option>
                            <% equipos.forEach( (equipo) => { %>
                                <option value="<%= equipo.id %>"><%= equipo.nombre %></option>
                            <% }) %>
                        </select>
                        <button class="btn btn-danger mt-2" type="submit">+</button>
                    </form>
                    <hr/>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>nombre</th>
                                <th>accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% equiposEnPartida.forEach( (equipo) =>{ %>
                                <td><%= equipo.nombre %></td>
                                <td><a class="btn btn-danger mt-2" href="/admin/modificarpartida/delete/<% partida.id %>/<%= equipo.id %>">x</a></td>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        

        <%- include('footeradmin') %>

    </body>
</html>