<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <link rel="icon" href="/imagenes/casino.jpg" />
        <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <title>Casino Osito</title>
    </head>
    <body class="container-fluid">

        <%- include('headeradmin') %>

        <h2>Partida</h2>
        <a class="btn btn-danger" href="/admin/partida_new">Nuevo</a>
        <div id="app">
            <a href="/filtrarPartidas?dt=0">0</a>
            <a href="/filtrarPartidas?dt=1">1</a>
            <a href="/filtrarPartidas?dt=2">2</a>

        </div>
       
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Hora Inicio</th>
                    <th>Duracion</th>
                    <th>Equipo A</th>
                    <th>Tasa A</th>
                    <th>Equipo B</th>
                    <th>Tasa B</th>
                    <th>Tasa Empate</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <% partidas.forEach((partida)=>{%>
                <tr>
                        <td><%= partida.id %></td>
                        <td><%= partida.tipoJuegoNombre %></td>
                        <td><%= partida.fecha.toISOString().substring(0,10) %></td>
                        <td><%= partida.inicio %></td>
                        <td><%= partida.duracion %></td>
                        <td><%= partida.equipoA %></td>
                        <td><%= partida.factorA %></td>
                        <td><%= partida.equipoB %></td>
                        <td><%= partida.factorB %></td>
                        <td><%= partida.factorEmpate %></td>
                        <td><%if(partida.estado == 0 ){%>
                            Iniciado
                        <% } else if (partida.estado == 1) { %>
                            Pendiente
                        <% } else { %>
                            Finalizado
                        <% } %>
                            
                        </td>
                        <td>
                            <a href="/admin/modificarpartida/<%= partida.id %>">Editar</a>
                            <a href="/admin/eliminarpartida/<%= partida.id %>">Eliminar</a>
                        </td>
                </tr>    
                <%})%>
            </tbody>
        </table>


        

        <%- include('footeradmin') %>

    </body>
</html>

