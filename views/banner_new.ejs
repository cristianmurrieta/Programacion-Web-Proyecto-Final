    <body class="container">

        <%- include('headeradmin') %>

        <h2>Nuevo banner</h2>

        <form method="post" action="/admin/banner_new" >
            <div>
                <label class="form-label">nombre</label>
                <input name="banner_nombre" type="text" class="form-control">
            </div>
            <div>
                <label class="form-label">urlCloud:</label>
                <input name="banner_urlCloud" type="text" class="form-control">
            </div>
            <div>
                <label class="form-label">url:</label>
                <input name="banner_url" type="text" class="form-control">
            </div>
            <div class="mb-2">
                <label class="form-label">Estado:</label>
                <select name="banner_estado" class="form-select">
                    <option value="-1">--- Elegir una categoria ---</option>
                    <option value="0">Inactivo</option>
                    <option value="1">Activo</option>
